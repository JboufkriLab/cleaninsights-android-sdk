<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="io.cleaninsights.example.wear.MainActivity" tools:deviceIds="wear">

    <Button android:id="@+id/btnVoteDog" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/vote_dogs" app:layout_box="all" android:onClick="voteDogs" />
    <Button android:id="@+id/btnVoteCat" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/vote_cats" app:layout_box="all" android:layout_gravity="bottom|start" android:onClick="voteCats"/>

    <TextView android:id="@+id/clock" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom|start" android:textColor="@android:color/white"
        app:layout_box="all" />

</android.support.wearable.view.BoxInsetLayout>
